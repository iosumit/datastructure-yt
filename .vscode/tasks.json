{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build C++ File",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/outputFiles/${fileBasenameNoExtension}.o",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run C/C++ File",
            "type": "shell",
            "command": "echo '=======================' && echo '    Running Program' && echo '=======================' && ${fileDirname}/outputFiles/${fileBasenameNoExtension}.o && echo '\n======================='",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "echo": false,
                "focus": false,
                "clear": true
            }
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "dependsOn": [
                "Build C++ File",
                "Run C/C++ File"
            ],
            "dependsOrder": "sequence"
        }
    ],
    "version": "2.0.0"
}